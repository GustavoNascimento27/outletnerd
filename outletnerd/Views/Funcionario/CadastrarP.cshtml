@model outletnerd.Models.Produto
@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<h1>Cadastro</h1>

<h4>Produtos</h4>
<hr />
<div class="d-grid P">
    <div class="colP">
        <form asp-controller="Funcionario" asp-action="CadastrarP">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group P">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-controlP" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-controlP" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-controlP" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-controlP" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-controlP" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-controlP" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group P">
                <input asp-action="CadastrarP" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}