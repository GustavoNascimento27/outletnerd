@model IEnumerable<outletnerd.Models.Produto>

@{
    ViewData["Title"] = "Cadastro de Produtos";
}
<div class="text-center">
    <header>

        <nav class="navbar-murph">

            <div class="logo">
                <a class="navbar-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/outlet.png" /></a>
            </div>
            <div class="search-bar">
                <form method="get" action="@Url.Action("Index", "YourController")">
                    <div class="input-group">
                        <!--<button type="submit" class="btn-busca">Buscar</button>-->

                        <div class="asearch-container">
                            <input type="text" name="searchTerm" class="busca" placeholder="O que você está procurando?" />
                            <img src="~/img/lupa.png" alt="Buscar" class="search-icon" />
                        </div>

                    </div>
                </form>
            </div>


            <div class="nav_btn">
                <a asp-controller="Carrinho" asp-action="Index" class="navbar-icon1"><img src="~/img/carrinho.svg" /></a>
                <a asp-controller="Cliente" asp-action="CadastrarC" class="navbar-icon2"><img src="~/img/usericon.png" /> </a>
            </div>

        </nav>

        <div class="navbar-categorias">
            <div class="navbar-cat">
                <ul>
                    <li class="itemMenu"><a asp-action="CadastrarF" asp-controller="Funcionario">Cadastro de Funcionários</a></li>
                    <li class="itemMenu"><a asp-action="CadastrarP" asp-controller="Funcionario">Cadastro de Produtos</a></li>
                </ul>
            </div>

        </div>

<h1 class="CdC">Cadastro de Produtos</h1>
<div class="d-gridC2">
        <div class="colC2">
<form asp-controller="Funcionario" asp-action="CadastrarP" method="post">

    <div class="form-groupC">
        <input name="Nome" class="form-controlC" placeholder="Nome" required />
    </div>

    <div class="form-groupC">
        <input name="Descricao" class="form-controlC" placeholder="Descrição" required />
    </div>

    <div class="form-groupC">
        <input name="Preco" class="form-controlC" placeholder="Preço" type="number" step="0.01" required />
    </div>

    <div class="form-groupC">
        <input name="ImageUrl" class="form-controlC" placeholder="URL da Imagem" />
    </div>

    <div class="form-groupC">
        <input name="Quantidade" class="form-controlC" placeholder="Quantidade" type="number" required />
    </div>

    <div class="form-groupC">
        <input name="Categoria" class="form-controlC" placeholder="Categoria" required />
    </div>

    <div class="form-groupC">
                    <button type="submit" class="btn-loginF">Cadastrar</button>
    </div>

</form>
        </div>
        </div>
<div>
    
</div>
            <div class="d-gridFF">
    @if (Model != null && Model.Any())
    {
        foreach (var produto in Model)
        {
            <div class="colFF">
            <div class="cardFF">
            
                <img src="@Url.Content(produto.ImageUrl)" class="ImgP" alt="@produto.Nome"
                     style="width:160px; height:160px; object-fit:cover; border-radius:15px; margin:15px;">

                <div style="padding:20px; flex:1;">
                    <h5 class="TituloP">@produto.Nome</h5>
                    <p class="NomeP"><strong>R$ @produto.Preco.ToString("F2")</strong></p>

                    <div style="margin-top:20px; display:flex; align-items:center; gap:15px;">

                        <form asp-controller="Funcionario" asp-action="Excluir" method="post">
                            <input type="hidden" name="id" value="@produto.IdProduto" />
                                    <button class="btn-primary2" type="submit">Excluir</button>
                        </form>

                    </div>
                </div>
            </div>
            </div>
           
        }
    }

    <a asp-action="CadastrarF" asp-controller="Funcionario">Cadastro de gerenciadores</a>
</div>
        
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}