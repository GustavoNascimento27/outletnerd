@model outletnerd.Models.Funcionario
@{
    ViewData["Title"] = "Cadastro de Funcionário/Membro da empresa";
}
<h1>Cadastro de Membros e Administradores</h1>



<div class="d-grid F">
    <div class="colF">
        <form asp-controller="Funcionario" asp-action="CadastrarF">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-groupF">
                <label asp-for="Nome" class="control-labelF"></label>
                <input asp-for="Nome" class="form-controlF" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group F">
                <label asp-for="Email" class="control-labelF"></label>
                <input asp-for="Email" class="form-controlF" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group F">
                <label asp-for="Senha" class="control-labelF"></label>
                <input asp-for="Senha" class="form-controlF" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group F">
                <input asp-action="CadastrarF" type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="func">
    <h3>Você é um cliente?</h3>
    <a asp-action="CadastrarC" asp-controller="Cliente">Acesse o cadastro de Clientes</a>
</div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}