@model IEnumerable<Funcionario>

@{
    ViewData["Title"] = "Cadastro de Funcionário/Membro da empresa";
}
<div class="text-center">
    <header>

        <nav class="navbar-murph">

            <div class="logo">
                <a class="navbar-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/outlet.png" /></a>
            </div>
            <div class="search-bar">
                <form method="get" action="@Url.Action("Index", "YourController")">
                    <div class="input-group">
                        <!--<button type="submit" class="btn-busca">Buscar</button>-->

                        <div class="asearch-container">
                            <input type="text" name="searchTerm" class="busca" placeholder="O que você está procurando?" />
                            <img src="~/img/lupa.png" alt="Buscar" class="search-icon" />
                        </div>

                    </div>
                </form>
            </div>


            <div class="nav_btn">
                <a asp-controller="Carrinho" asp-action="Index" class="navbar-icon1"><img src="~/img/carrinho.png" /></a>
                <a asp-controller="Cliente" asp-action="CadastrarC" class="navbar-icon2"><img src="~/img/usericon.png" /> </a>
            </div>

        </nav>

        <div class="navbar-categorias">
            <div class="navbar-cat">
                <ul>
                    <li class="itemMenu"><a asp-action="CadastrarF" asp-controller="Funcionario">Cadastro de Funcionários</a></li>
                    <li class="itemMenu"><a asp-action="CadastrarP" asp-controller="Funcionario">Cadastro de Produtos</a></li>
   
                </ul>
            </div>

        </div>

<h1 class="CdC">Cadastro de Membros e Administradores</h1>

<div class="d-gridC">
    <div class="colC">
        <form asp-controller="Funcionario" asp-action="CadastrarF" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-groupC">
                <input name="Nome" class="form-controlC" placeholder="Nome do funcionário" />
            </div>

            <div class="form-groupC">
                <input name="Email" class="form-controlC" placeholder="E-mail do funcionário" />
            </div>

            <div class="form-groupC">
                        <input name="Senha" type="password"  class="form-controlC" placeholder="Senha do funcionário" />
            </div>

            <div class="form-groupC">
                <button type="submit" class="btn-loginF">Cadastrar</button>
            </div>
        </form>
    </div>
</div>

<hr />

<h3>Funcionários cadastrados</h3>

<div class="d-gridFF">
    @foreach (var funcionario in Model)
    {
        <div class="colFF">
            <div class="cardFF">
                

                    <div style="padding:20px; flex:1;">
                        <h5 class="TituloP">@funcionario.Nome</h5>
                        <p class="NomeP"><strong>@funcionario.Email</strong></p>
                        <form asp-controller="Funcionario" asp-action="ExcluirF" method="post">
                            <input type="hidden" name="id" value="@funcionario.IdFuncionario" />
                            <button type="submit" class="btn-loginF" style="background:red; color:white;">
                                Excluir
                            </button>
                        </form>
                    </div>

                </div>
            </div>
    
    }
</div>

<div>
    <a asp-controller="Funcionario" asp-action="CadastrarP">Voltar</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}