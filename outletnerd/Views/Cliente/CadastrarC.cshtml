@model outletnerd.Models.Cliente
@{
    ViewData["Title"] = "Cadastro";
}
<h1 class="CdC">Cadastro de Clientes</h1>
<div class="d-grid C">
    <div class="colC">
        <form asp-controller="Cliente" asp-action="CadastrarC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-groupC">
                <label asp-for="Nome" class="control-labelC"></label>
                <input asp-for="Nome" class="form-controlC" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-groupC">
                <label asp-for="Email" class="control-labelC"></label>
                <input asp-for="Email" class="form-controlC" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-groupC">
                <label asp-for="Senha" class="control-labelC"></label>
                <input asp-for="Senha" class="form-controlC" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-groupC">
                <label asp-for="Telefone" class="control-labelC"></label>
                <input asp-for="Telefone" class="form-controlC" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-groupC">
                <input asp-action="CadastrarC" type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 <div class="func">
     <h3>Você é um funcionário/Membro da empresa?</h3>
     <a asp-action="CadastrarF" asp-controller="Funcionario">Acesse o dashboard de gerenciadores</a>
 </div>
<div>
