@model outletnerd.Models.Cliente
@{
    ViewData["Title"] = "Cadastro";
}
<h1 class="CdC">Cadastro de Clientes</h1>
<div class="d-gridC">
        <div class="colC">

            <form asp-controller="Cliente" asp-action="CadastrarC"> <!-- ou action="#" se quiser testar -->
                <div class="form-groupC">
                    <input asp-for="Nome" class="form-controlC" placeholder="Nome de usuário" />
                </div>
                <div class="form-groupC">
                    <input asp-for="Telefone" class="form-controlC" placeholder="Telefone" />
                </div>
                <div class="form-groupC">
                    <input asp-for="Email" class="form-controlC" placeholder="Email" />
                </div>
                <div class="form-groupC">
                    <input asp-for="Senha" type="password" class="form-controlC" placeholder="Senha" />
                </div>
                <div class="form-groupC" style="text-align:center;">
                <input asp-action="CadastrarC" type="submit" class="btn-login" value="Cadastrar" />
                </div>
            </form>
        </div>
    </div>
 <div class="func">
     <h3>Você é um funcionário/Membro da empresa?</h3>
     <a asp-action="CadastrarF" asp-controller="Funcionario">Acesse o dashboard de gerenciadores</a>
    <h3>Já tem uma conta?</h3>
    <a asp-action="Login" asp-controller="Cliente">Login</a>
 </div>
<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}