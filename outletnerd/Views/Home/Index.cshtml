@{
        ViewData["Title"] = "OutletNerd";
@model IEnumerable<outletnerd.Models.Produto>
}

<div class="text-center">
    <header>

        <nav class="navbar-murph">

            <div class="logo">
                <a class="navbar-logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="img/outlet.png"</img></a>
            </div>
            <div class="search-bar">
                <form method="get" action="@Url.Action("Index", "YourController")">
                    <div class="input-group">
                        <!--<button type="submit" class="btn-busca">Buscar</button>-->
                        
                        <div class="asearch-container">
                            <input type="text" name="searchTerm" class="busca" placeholder="O que você está procurando?" />
                            <img src="~/img/lupa.png" alt="Buscar" class="search-icon" />
                        </div>
                        
                    </div>
                </form>
            </div>


            <div class="nav_btn">
                <a asp-controller="Carrinho" asp-action="Index" class="navbar-icon1"><img src="~/img/carrinho.png"/></a>
                <a class="navbar-icon2"><img src="~/img/usericon.png"/> </a>
            </div>

        </nav>

        <div class="navbar-categorias">
            <div class="navbar-cat">
                <ul>
                    <li class="itemMenu"><a href="#">Decorações</a></li>
                    <li class="itemMenu"><a href="#">Brinquedos</a></li>
                    <li class="itemMenu"><a href="#">Livros e Mangás</a></li>
                    <li class="itemMenu"><a href="#">Roupas</a></li>
                </ul>
            </div>

        </div>
        <div class="banner-dec">
            <img class="banner" src="~/img/banner.png" alt="Alternate Text"/>
        </div>

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@produto.ImageUrl" class="card-img-top" alt="@produto.Nome" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                            <!--<p class="card-text">@produto.Descricao</p>-->
                    <p class="card-text"><strong>Preço: R$ @produto.Preco.ToString("F2")</strong></p>
                    <p class="card-textq" style="font-size:20px;"><small class="text-muted">Estoque: @produto.Quantidade.ToString()</small></p>

                    <form asp-controller="Carrinho" asp-action="AddCarrinho" method="post">
                        <input  type="hidden" name="produtoId" value="@produto.IdProduto" />
                        <div class="form-group mb-2">
                            <label class="lblq" for="quantidade-@produto.IdProduto">Quantidade:</label>
                            <input type="number" id="quantidade-@produto.IdProduto" name="quantidade" class="form-control" value="1" min="1" max="@produto.Quantidade" />
                        </div>
                        <button type="submit" class="btn-primary">Adicionar ao Carrinho</button>
                    </form>
                </div>
            </div>
        </div>
        }

</div>
    </header>
    <footer class="border-top footer text-muted">
        <div class="container-footer">
            &copy; 2025 - outletnerd - <!--<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>-->
        </div>
    </footer>
</div>
